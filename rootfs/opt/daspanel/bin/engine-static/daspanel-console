#!/usr/bin/with-contenv sh

# Installation UUID must be exist
if [ -z "$DASPANEL_SYS_UUID" ]; then
    echo "***"
    echo "ERROR: You must set the env variable DASPANEL_SYS_UUID to a valid UUID"
    echo "***"
    exit 0
fi

# Checking parameters
if [ -z "$1" ]; then
    echo "***"
    echo "ERROR: You must inform the site UUID"
    echo "***"
    exit 0
fi
if [ -z "$2" ]; then
    echo "***"
    echo "ERROR: You must inform the site version"
    echo "***"
    exit 0
fi

# Set home dir of daspanel user to allow proper work of npm and cia
export HOME=/home/daspanel

# Get parameters
SITE="$1"
VERSION="$2"

# Check if dir exists
if [ ! -d "/opt/daspanel/data/$DASPANEL_SYS_UUID/content/$SITE/v/$VERSION" ]; then
    echo "***"
    echo "ERROR: Incorrect parametrs. Inexistent site and/or version"
    echo "***"
    exit 0
fi

cd /opt/daspanel/data/$DASPANEL_SYS_UUID/content/$SITE/v/$VERSION

exec /bin/sh
